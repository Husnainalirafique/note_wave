<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteWave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (No change for night mode). -->
        <item name="colorPrimary">#FFB923</item>
        <!-- Primary brand color variant (No change for night mode). -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Text and icons on the primary color (You can keep these as light colors). -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color for night mode. -->
        <item name="colorSecondary">#D6A847</item>
        <!-- Secondary brand color variant for night mode. -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <!-- Text and icons on the secondary color for night mode. -->
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowBackground">#121212</item>-->
    </style>
</resources>
